@model BankingWebApp.Models.BankAccountModels.WithdrawViewModel

@{
    ViewBag.Title = "Withdraw";
}

<h2>Withdraw</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bank Withdrawal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.WithdrawAmount, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(m => m.WithdrawAmount, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.WithdrawAmount, new { @class = "form-control" })
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
